@model randevuOtomasyonu.Models.Login;

@{
    Layout = null;
}
<!doctype html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login | Gags Simple Admin Template</title>
    <link href="/css/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="/css/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="/css/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
    <link href="/css/flag-icon.min.css" rel="stylesheet">
    <link href="/css/navbar-dropdowns.css" rel="stylesheet">
    <link href="/css/sidebar-default.css" rel="stylesheet">
    <link href="/css/auth.css" rel="stylesheet">

  
</head>

<body>
    <div class="wrapper">
        <div class="auth-content">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <img class="brand" src="/content/img/Beyaz2.png" alt="bootstraper logo">
                    </div>
                    <h6 class="mb-4 text-muted">Hesabiniza Giriş Yapınız</h6>
                    @using (Html.BeginForm("Login","Login",FormMethod.Post))
                    {
                        <form action="Login" method="post">
                            <div class="mb-3 text-start">
                                <label for="email" class="form-label">E-posta</label>
                                @Html.TextBoxFor(f => f.Email, new { @class = "form-control", placeholder = "E-mail Giriniz" })
                               @*  <input type="email" class="form-control" placeholder="E-mail Giriniz" required> *@
                            </div>
                            <div class="mb-3 text-start">
                                <label for="password" class="form-label">Şifre</label>
                                @Html.TextBoxFor(f => f.Sifre, new { @class = "form-control", placeholder = "Şifre Giriniz"})
                               @*  <input type="password" class="form-control" placeholder="Şifre Giriniz" required> *@
                            </div>
                            <div class="mb-3 text-start">
                                <div class="form-check">
                                    <input class="form-check-input" name="remember" type="checkbox" value="" id="check1">
                                    <label class="form-check-label" for="check1">
                                        Beni hatırla
                                    </label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary shadow-2 mb-4">Giriş</button>
                            @if(!Html.ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger mt-3" role="alert">
                                    @Html.ValidationSummary(true , "")
                                </div>
                            }
                        </form>                       
                    }
                    
                </div>
            </div>
        </div>
    </div>    
</body>
<script src="/css/jquery/dist/jquery.min.js"></script>
<script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/js/script.js"></script>
</html>


