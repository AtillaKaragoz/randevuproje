
@model randevuOtomasyonu.Models.Uygulamalar

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>Uygulamalar</h3>
        </div>
        <div class="box box-primary">
            <div class="box-body">
                <table width="100%" class="table table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Servis Turu</th>
                            <th>Servis Aciklama</th>
                            <th>Servis Ücret</th>
                        </tr>
                    </thead>          
                    <tbody>
                        @foreach( var item in ViewBag.uygulamalar as List<Uygulamalar>)
                        {
                            <tr>
                                <td>@(item.ServisTuru)</td>
                                <td>@(item.ServisAciklama)</td>
                                <td>@(item.ServisUcreti)</td>
                                <td class="text-end">

                                    <a class="btn btn-outline-info btn-rounded" asp-action="uygulamaDüzenle" asp-route-id="@item.ServisId"><i class="fas fa-pen"></i></a>

                                    <a class="btn btn-outline-danger btn-rounded" asp-action="uygulamaSil" asp-route-id="@item.ServisId"><i class="fas fa-trash"></i></a>                               
                                </td>
                            </tr>
                        }
                        
                    </tbody>     
                   
                </table>
            </div>

            <a class="btn btn-outline-danger btn-rounded" href="/Home/uygulamaEkle"> Yeni Giriş </a>

        </div>
    </div>
</div>



